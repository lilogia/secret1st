<div>
<%if (secret != null) {%>
<form action="/modifySecret" method="post">
    <input type="hidden" name="_id" value="<%=secret._id%>">
    <label for="secret">Secret</label>
    <input type="text" name="secret" placeholder="Secret Name" value="<%=secret.secret%>">
    <label for="url">URL</label>
    <input type="url" name="url" placeholder="https://host:port" value="<%=secret.url%>">
    <label for="name">Name</label>
    <input type="text" name="name" placeholder="Name" value="<%=secret.name%>">
    <label for="pwd">Password</label>
    <input type="text" name="pwd" placeholder="Password" value="<%=secret.pwd%>">
    <input type="submit" value="Submit">
    <input type="button" value="Cancel" onclick="javascript:window.history.back()">
  </form>
<%= secret.secret%>, <%= secret.url%>, <%= secret.name%>, <%= secret.pwd%>
<%}else {%>
<form class="was-validated" action="/saveSecret" method="post">
  <div class="form-group">
    <label for="secret">Secret</label>
    <input class="form-control" type="text" name="secret" placeholder="Secret Name" required>
    <div class="valid-feedback">Valid</div>
    <div class="invalid-feedback">Please fill out this field</div>
  </div>
  <div class="form-group">
    <label for="url">URL</label>
    <input class="form-control" type="url" name="url" placeholder="https://host:port">
    <div class="valid-feedback">Valid</div>
    <div class="invalid-feedback">Invalid Text</div>
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input class="form-control" type="text" name="name" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="pwd">Password</label>
    <input class="form-control" type="text" name="pwd" placeholder="Password">
  </div>
    <input class="btn btn-primary" type="submit" value="Submit">
    <input class="btn btn-secondary" type="button" value="Cancel" onclick="javascript:window.history.back()">
  </form>
  <%}%>
  </div>