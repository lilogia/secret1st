<form class="needs-validation" 
<%if (secret != null) {%>
action="/modifySecret"
<%}else {%>
action="/saveSecret"
<%}%>
 method="post">
  <div class="form-group">
    <label for="secret">Secret</label>
    <input class="form-control" type="text" name="secret" placeholder="Secret Name" required
    <%if (secret != null) {%>
     value="<%=secret.secret%>"
    <%}%>
    >
    <div class="valid-feedback">Valid</div>
    <div class="invalid-feedback">Please fill out this field</div>
  </div>
  <div class="form-group">
    <label for="url">URL</label>
    <input class="form-control" type="url" name="url" placeholder="https://host:port"
    <%if (secret != null) {%>
     value="<%=secret.url%>"
    <%}%>
    >
    <div class="valid-feedback">Valid</div>
    <div class="invalid-feedback">Invalid Text</div>
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input class="form-control" type="text" name="name" placeholder="Name"
    <%if (secret != null) {%>
     value="<%=secret.name%>"
    <%}%>
    >
  </div>
  <div class="form-group">
    <label for="pwd">Password</label>
    <input class="form-control" type="text" name="pwd" placeholder="Password"
    <%if (secret != null) {%>
     value="<%=secret.pwd%>"
    <%}%>
    >
  </div>
    <input class="btn btn-primary" type="submit" value="Submit">
    <input class="btn btn-secondary" type="button" value="Cancel" onclick="javascript:window.history.back()">
    <%if (secret != null) {%>
     <input type="hidden" name="_id" value="<%=secret._id%>">
    <%}%>

</form>